{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "lib": ["ES2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES2019",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
